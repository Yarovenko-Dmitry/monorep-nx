{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@4-mono-all/api": ["libs/api/src/index.ts"],
      "@4-mono-all/hooks": ["libs/hooks/src/index.ts"],
      "@4-mono-all/pages-web": ["libs/pages-web/src/index.ts"],
      "@4-mono-all/redux": ["libs/redux/src/index.ts"],
      "@4-mono-all/redux/actions": ["libs/redux/actions/src/index.ts"],
      "@4-mono-all/redux/constants": ["libs/redux/constants/src/index.ts"],
      "@4-mono-all/redux/reducers": ["libs/redux/reducers/src/index.ts"],
      "@4-mono-all/redux/saga": ["libs/redux/saga/src/index.ts"],
      "@4-mono-all/types": ["libs/types/src/index.ts"],
      "@4-mono-all/ui-web": ["libs/ui-web/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
